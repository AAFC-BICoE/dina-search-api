version: "3.7"

services:

  rabbitmq:
    image: rabbitmq:3-management-alpine
    container_name: 'rabbitmq'
    ports:
        - 5672:5672
        - 15672:15672
    volumes:
        - ~/.docker-conf/rabbitmq/data/:/var/lib/rabbitmq/
        - ~/.docker-conf/rabbitmq/log/:/var/log/rabbitmq
    networks:
        - dina_rabbitmq_net

  # Elasticsearch Docker Images: https://www.docker.elastic.co/
  elasticsearch-dina:
    image: docker.elastic.co/elasticsearch/elasticsearch:7.13.3
    environment:
      - xpack.security.enabled=false
      - discovery.type=single-node
    ulimits:
      memlock:
        soft: -1
        hard: -1
      nofile:
        soft: 65536
        hard: 65536
    cap_add:
      - IPC_LOCK
    volumes:
      - elasticsearch-data:/usr/share/elasticsearch/data
    ports:
      - 9200:9200
      - 9300:9300

  elastic-configurator:
    image: aafcbicoe/dina-es-init-container:dev # Should match the name used locally to build the image
    environment:
      ELASTIC_SERVER_URL: $ELASTIC_SERVER_URL
      INDEX_CREATE_CMD: $INDEX_CREATE_CMD
      DINA_INDEX_DECLARATIONS: AGENT MATERIAL_SAMPLE
      DINA_AGENT_INDEX_NAME: $DINA_AGENT_INDEX_NAME
      DINA_AGENT_INDEX_SETTINGS_FILE: $DINA_AGENT_INDEX_SETTINGS_FILE
      DINA_MATERIAL_SAMPLE_INDEX_NAME: $DINA_MATERIAL_SAMPLE_INDEX_NAME
      DINA_MATERIAL_SAMPLE_INDEX_SETTINGS_FILE: $DINA_MATERIAL_SAMPLE_INDEX_SETTINGS_FILE
      DINA_STORAGE_INDEX_NAME: $DINA_STORAGE_INDEX_NAME
      DINA_STORAGE_INDEX_SETTINGS_FILE: $DINA_STORAGE_INDEX_SETTINGS_FILE
    volumes:
      - ./elastic-configurator-settings:/usr/share/elastic-configurator/settings

  # Addition of Kibana, for development purpose or browsing through the dina indices.
  #kibana-dina:
  #  container_name: kibana-dina
  #  image: docker.elastic.co/kibana/kibana:7.13.3
  #  environment:
  #    - ELASTICSEARCH_HOSTS=http://elasticsearch-dina:9200
  #  ports:
  #    - 5601:5601
  #  depends_on:
  #    - elasticsearch-dina

  search-cli:
    image: aafcbicoe/dina-search-cli:dev # Should match the name used locally to build the image
    stdin_open: true
    tty: true
    environment:
      messaging.isConsumer: "true"
      messaging.isProducer: "true"
      rabbitmq.host: rabbitmq-dina
    networks:
      - dina_rabbitmq_net

  search-ws:
    image: aafcbicoe/dina-search-ws:dev # Should match the name used locally to build the image
    ports:
      - 8085:8085

volumes:
  elasticsearch-data:
    driver: local
  elastic-configurator-settings:
    driver: local    

networks:
  dina_rabbitmq_net:
    driver: bridge  
